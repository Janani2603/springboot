spring:
  cloud:
    gateway:
      routes:
        - id: microservice-1
          uri: lb://MSA
          predicates:
            - Path= /msA/**
          filters:
            - AuthenticationFilter
            
        - id: microservice-2
          uri: lb://MSB
          predicates:
            - Path:/msb/**
          filters:
            - AuthenticationFilter 
            
        - id: identity-provider
          uri: lb://MA-IDENTITY-PROVIDER
          predicates:
            - Path:/auth/**