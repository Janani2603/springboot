spring:
  cloud:
    gateway:
      routes:
        - id: microservice-1
          uri: lb://MA-MICROSERVICE-1
          predicates:
            - Path:/msa/**
          filters:
            - AuthenticationFilter
            
        - id: microservice-2
          uri: lb://MA-MICROSERVICE-2
          predicates:
            - Path:/msb/**
          filters:
            - AuthenticationFilter 
            
        - id: identity-provider
          uri: lb://MA-IDENTITY-PROVIDER
          predicates:
            - Path:/auth/**